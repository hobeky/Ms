{% extends 'base.html.twig' %}

{% block title %}Kindergarten - Daycare and Kindergarten Website Template{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}


{% block body %}
    <section id="review">
        <div class="services-sub container padding-medium">
            <h2 class="display-4 text-center mb-5">{{ 'review.reviewsFromParents'|trans }}</h2>

            <div class="row">
                <div class="mt-5 col-md-4">
                    <div class="reviews-components p-5">
                        <iconify-icon icon="gridicons:quote" class="quote my-2"></iconify-icon>
                        <p>„Veľmi sa nám páči prístup učiteliek, vždy nájdu spôsob, ako zaujať a motivovať deti.“</p>
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <img src="../../public/images/commentor-item1.jpg" alt="image" class="img-fluid">
                            </div>
                            <div class="col-md-9">
                                <h5 class="lh-sm">Jana Horváthová</h5>
                                <div class="d-flex">
                                    <iconify-icon icon="ion:star" class="rate pe-1 text-warning"></iconify-icon>
                                    <iconify-icon icon="ion:star" class="rate pe-1 text-warning"></iconify-icon>
                                    <iconify-icon icon="ion:star" class="rate pe-1 text-warning"></iconify-icon>
                                    <iconify-icon icon="ion:star" class="rate pe-1 text-warning"></iconify-icon>
                                    <iconify-icon icon="ion:star" class="rate pe-1 text-warning"></iconify-icon>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Additional review blocks would be similar, omitted here for brevity -->
            </div>

            <nav class="navigation paging-navigation text-center mt-5" role="navigation">
                <div class="pagination loop-pagination d-flex justify-content-center align-items-center">
                    <a href="#" class="pagination-arrow d-flex align-items-center fw-normal mx-3">
                        <iconify-icon icon="ic:baseline-keyboard-arrow-left" class="pagination-arrow fs-1"></iconify-icon>
                    </a>
                    <span aria-current="page" class="page-numbers fs-4 fw-normal mx-3 current">1</span>
                    <a class="page-numbers fs-4 fw-normal mx-3" href="#">2</a>
                    <a class="page-numbers fs-4 fw-normal mx-3" href="#">3</a>
                    <a href="#" class="pagination-arrow d-flex align-items-center fw-normal mx-3">
                        <iconify-icon icon="ic:baseline-keyboard-arrow-right" the="pagination-arrow fs-1"></iconify-icon>
                    </a>
                </div>
            </nav>
        </div>
    </section>

    <section id="enroll">
        <div class="container"
             style="margin: 5em auto;"
        >
            <div class="row">
                <div class="offset-md-3 col-md-6 text-center ">

                    <h2 class="display-4 mb-3">{{ 'review.formHeading'|trans }}</h2>
                    <p class="fw-bold">{{ 'review.formSubHeading'|trans }}</p>
                    <form class="contact-form row mt-5">
                        <div class="col-md-12 col-sm-12 mb-4">
                            <input type="text" name="Parents" placeholder="{{ 'review.formPlaceholderName'|trans }}"
                                   class="w-100 border ps-4 py-2 rounded-3">
                        </div>
                        <div class="col-md-12 col-sm-12 mb-4">
                            <input type="number" name="Phone" placeholder="{{ 'review.formPlaceholderStars'|trans }}"
                                   class="w-100 border ps-4 py-2 rounded-3">
                        </div>

                        <div class="col-md-12 col-sm-12 mb-4">
                            <textarea type="text" name="message" placeholder="{{ 'review.formPlaceholderReview'|trans }}"
                                      class="w-100 border ps-4 py-2 rounded-3"></textarea>
                        </div>
                    </form>

                    <button class="btn btn-primary mt-3" href="#">{{ 'review.formButton'|trans }}</button>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
