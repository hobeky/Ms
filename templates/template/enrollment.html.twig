{% extends 'base.html.twig' %}

{% block title %}Kindergarten - Daycare and Kindergarten Website Template{% endblock %}



{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
{% endblock %}


{% block body %}

    <section id="enroll" class="padding-medium">
        <div class="container">
            <h2 class="display-4 text-center mb-5">Enroll Your Child</h2>
            <div class="offset-md-3 col-md-6 ">
                <form class="contact-form row mt-5">

                    <h3>Child Details</h3>

                    <div class="col-md-12 col-sm-12 mb-4">
                        <input type="text" name="Name" placeholder="Child name" class="w-100 border ps-4 py-2 rounded-3">
                    </div>
                    <div class="col-md-12 col-sm-12 mb-4">
                        <input type="number" name="Age" placeholder="Child Age" class="w-100 border ps-4 py-2 rounded-3">
                    </div>

                    <h3>Parents Details</h3>

                    <div class="col-md-12 col-sm-12 mb-4">
                        <input type="text" name="Parents" placeholder="Parents name" class="w-100 border ps-4 py-2 rounded-3">
                    </div>
                    <div class="col-md-12 col-sm-12 mb-4">
                        <input type="email" name="Email" placeholder="Parents Email" class="w-100 border ps-4 py-2 rounded-3">
                    </div>
                    <div class="col-md-12 col-sm-12 mb-4">
                        <input type="number" name="Phone" placeholder="Contact Number" class="w-100 border ps-4 py-2 rounded-3">
                    </div>

                    <div class="col-md-12 col-sm-12 mb-4">
            <textarea type="text" name="message" placeholder="Your message"
                      class="w-100 border ps-4 py-2 rounded-3"></textarea>
                    </div>

                    <button class="btn btn-primary mt-3" href="#">Submit</button>

                </form>

            </div>

        </div>
    </section>

{% endblock %}

