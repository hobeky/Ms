<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ page_title|trans }} - {{ heroName|trans }}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">

    {% block stylesheets %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="format-detection" content="telephone=no">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="author" content="">
        <meta name="description" content="{{ page_description is defined ? page_description : '' }}">
        <meta name="keywords" content="{{ page_keywords is defined ? page_keywords|trans : '' }}">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

        <link rel="stylesheet" type="text/css" href="{{ asset('css/vendor.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Grand+Hotel&family=Lora:wght@400;500;700&display=swap"
              rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="{{ asset('js/plugins.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    {% endblock %}
</head>
<body>
{% include 'template/partials/_svg.html.twig' %}

<header id="header">
    <nav class="header-top bg-dark py-1">
        <div class="container">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <ul class="info d-flex flex-wrap list-unstyled m-0">
                    <li class="location text-capitalize text-white d-flex align-items-center me-4">
                        <svg class="me-1" width="18" height="18">
                            <use xlink:href="#location"></use>
                        </svg>Štúrova 44, 040 01 Košice
                    </li>
                    <li class="phone text-capitalize text-white d-flex align-items-center me-4">
                        <svg class="me-1" width="18" height="18">
                            <use xlink:href="#phone"></use>
                        </svg>+421 918 757 178
                    </li>
                </ul>
                <div class="social">
                    <ul class="info d-flex flex-wrap list-unstyled m-0">
                        <li class="social-icon text-white d-flex align-items-center me-3">
                            <a href="https://www.facebook.com/mssturova.sk">
                                <svg width="18" height="18">
                                    <use xlink:href="#facebook"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="social-icon text-white d-flex align-items-center me-3">
                            <a href="https://www.instagram.com/smscremedelacreme/">
                                <svg width="18" height="18">
                                    <use xlink:href="#instagram"></use>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <div class="language">
                                <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale':'sk'})) }}"
                                   class="{% if app.request.locale == 'sk' %}active_link{% endif %}"
                                >sk</a> / <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale':'en'})) }}"
                                             class="{% if app.request.locale == 'en' %}active_link{% endif %}"
                                >en</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <nav id="primary-header" class="navbar navbar-expand-lg py-3" style="background-color: #00a595;">
        <div class="container">
            <a class="navbar-brand" href="{{ path('about_us') }}">
                <img src="{{ asset('images/creme_logo.JPG') }}" class="logo img-fluid" style="max-width: 150px">
            </a>
            <button class="navbar-toggler border-0 d-flex d-lg-none order-3 p-2 shadow-none" type="button"
                    data-bs-toggle="offcanvas" data-bs-target="#bdNavbar" aria-controls="bdNavbar"
                    aria-expanded="false">
                <svg class="navbar-icon" width="60" height="60">
                    <use xlink:href="#navbar-icon"></use>
                </svg>
            </button>
            <div class="header-bottom offcanvas offcanvas-end" id="bdNavbar"
                 aria-labelledby="bdNavbarOffcanvasLabel">
                <div class="offcanvas-header px-4 pb-0">
                    <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                            aria-label="Close" data-bs-target="#bdNavbar"></button>
                </div>
                <div class="offcanvas-body align-items-center justify-content-end">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item px-3 py-2 py-lg-0 dropdown">
                            <a class="nav-link p-0 dropdown-toggle {%
                                if app.request.attributes.get('_route') == 'about_us' or
                                app.request.attributes.get('_route') == 'reviews' or
                                app.request.attributes.get('_route') == 'contact'
                            %}active{% endif %}" data-bs-toggle="dropdown" href="#" role="button"
                               aria-expanded="false"><b>{{ 'main.about'|trans }}</b></a>
                            <ul class="dropdown-menu dropdown-menu-end animate slide mt-3 border-0 shadow">
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'about_us' %}active{% endif %}" aria-current="page" href="{{ path('about_us') }}"><b>{{ 'main.about'|trans }}</b></a>
                                </li>
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'reviews' %}active{% endif %}" aria-current="page" href="{{ path('reviews') }}"><b>{{ 'main.reviews'|trans }}</b></a>
                                </li>
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'contact' %}active{% endif %}" aria-current="page" href="{{ path('contact') }}"><b>{{ 'main.contact'|trans }}</b></a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0">
                            <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'for_parents' %}active{% endif %}" aria-current="page" href="{{ path('for_parents') }}"><b>{{ 'main.forParents'|trans }}</b></a>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0">
                            <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'teachers' %}active{% endif %}" aria-current="page" href="{{ path('teachers') }}"><b>{{ 'main.ourTeam'|trans }}</b></a>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0">
                            <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'gallery' %}active{% endif %}" aria-current="page" href="{{ path('gallery') }}"><b>{{ 'main.gallery'|trans }}</b></a>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0">
                            <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'long_menu' %}active{% endif %}" aria-current="page" href="{{ path('long_menu') }}"><b>{{ 'main.menu'|trans }}</b></a>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0 dropdown">
                            <a class="nav-link p-0 dropdown-toggle {%
                                if app.request.attributes.get('_route') == 'short_menu' or
                                app.request.attributes.get('_route') == 'schedule' or
                                app.request.attributes.get('_route') == 'event'
                            %}active{% endif %}" data-bs-toggle="dropdown" href="#" role="button"
                               aria-expanded="false"><b>{{ 'main.organisation'|trans }}</b></a>
                            <ul class="dropdown-menu dropdown-menu-end animate slide mt-3 border-0 shadow">
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'short_menu' %}active{% endif %}" aria-current="page" href="{{ path('short_menu') }}"><b>{{ 'main.shortMenu'|trans }}</b></a>
                                </li>
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'schedule' %}active{% endif %}" aria-current="page" href="{{ path('schedule') }}"><b>{{ 'main.schedule'|trans }}</b></a>
                                </li>
                                <li class="nav-item px-3 py-2 py-lg-0">
                                    <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'event' %}active{% endif %}" aria-current="page" href="{{ path('event') }}"><b>{{ 'main.event'|trans }}</b></a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item px-3 py-2 py-lg-0">
                            <a class="nav-link p-0 {% if app.request.attributes.get('_route') == 'child_safety' %}active{% endif %}" aria-current="page" href="{{ path('child_safety') }}"><b>{{ 'main.kidSafety'|trans }}</b></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

{% include 'template/partials/_heroPage.html.twig' %}
{% block body %}{% endblock %}

<footer id="footer" class="bg-gray">
    <div class="container text-center padding-medium" style="padding: 2em!important;">
        <ul class="info text-center list-unstyled mt-4">
            <li class="location text-capitalize mb-2 d-flex justify-content-center align-items-center">
                <svg class="text-primary me-1" width="18" height="18">
                    <use xlink:href="#location"></use>
                </svg>Štúrova 44, 040 01 Košice
            </li>
            <li class="email text-capitalize mb-2 d-flex justify-content-center align-items-center">
                <svg class="text-primary me-1" width="18" height="18">
                    <use xlink:href="#email"></use>
                </svg>riaditel@mssturova.sk
            </li>
            <li class="phone text-capitalize mb-2 d-flex justify-content-center align-items-center">
                <svg class="text-primary me-1" width="18" height="18">
                    <use xlink:href="#phone"></use>
                </svg>+421 918 757 178
            </li>
            <li class="clock text-capitalize mb-2 d-flex justify-content-center align-items-center">
                <svg class="text-primary me-1" width="18" height="18">
                    <use xlink:href="#clock"></use>
                </svg>{{ 'main.workDays'| trans }} 8:00-16:00,
            </li>
            <li class="clock text-capitalize mb-2 d-flex justify-content-center align-items-center">
                <a href="https://www.osobnyudaj.sk/informovanie/47025115/gdpr/sk/zakladne-informacie" target="_blank">{{ 'main.GDPR'|trans }}</a>
            </li>
        </ul>
    </div>
    <div class="bg-gray border-top">
        <div class="text-center py-4">
            <p class="mb-0">©2024 Creme de la creme. </p>
        </div>
    </div>
</footer>
</body>
</html>
